<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewContactActivity">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="141dp"
        android:layout_height="109dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <ImageView
        android:id="@+id/imgCall"
        android:layout_width="91dp"
        android:layout_height="74dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMessage"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <ImageView
        android:id="@+id/imgMessage"
        android:layout_width="91dp"
        android:layout_height="74dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/imgCall"
        app:layout_constraintTop_toBottomOf="@+id/tvName1"
        app:srcCompat="@android:drawable/sym_action_email" />

    <ImageView
        android:id="@+id/imgVideo"
        android:layout_width="91dp"
        android:layout_height="73dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgMessage"
        app:layout_constraintTop_toTopOf="@+id/imgMessage"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/presence_video_busy" />

    <TextView
        android:id="@+id/tvName1"
        android:layout_width="92dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:text="Jane"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imgMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPhoto"
        app:layout_constraintVertical_bias="0.272" />

    <TextView
        android:id="@+id/tvCall"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:layout_marginEnd="40dp"
        android:text="Call"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMessage"
        app:layout_constraintEnd_toStartOf="@+id/tvMessage"
        app:layout_constraintTop_toTopOf="@+id/tvMessage"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="98dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:text="Message"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tvVideo"
        app:layout_constraintTop_toBottomOf="@+id/imgMessage" />

    <TextView
        android:id="@+id/tvVideo"
        android:layout_width="85dp"
        android:layout_height="43dp"
        android:layout_marginEnd="40dp"
        android:text="Video"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMessage"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>